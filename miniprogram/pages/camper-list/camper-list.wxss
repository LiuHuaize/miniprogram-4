page {
  height: 100vh;
  background: linear-gradient(180deg, #f8fafc 0%, #eef3f8 100%);
  color: #1f2a37;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.status-spacer {
  height: 44px;
}

.nav-bar {
  padding: 6px 16px 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 14px;
  color: #64748b;
}

.nav-left,
.nav-right {
  display: flex;
  align-items: center;
  min-width: 60px;
}

.nav-left {
  color: #475569;
}

.nav-icon-wrap {
  width: 28px;
  height: 28px;
  border-radius: 999px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f3f6f9;
  border: 1px solid rgba(148, 163, 184, 0.2);
  margin-right: 6px;
}

.nav-text {
  font-weight: 500;
}

.nav-title {
  font-size: 16px;
  font-weight: 600;
  color: #0f172a;
}

.scroll-area {
  flex: 1;
  height: 0;
  padding: 0 16px;
  padding-bottom: calc(120px + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.add-row {
  margin-top: 10px;
  background: linear-gradient(180deg, #ffffff 0%, #f9fbff 100%);
  border-radius: 14px;
  padding: 12px 14px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid rgba(148, 163, 184, 0.2);
  box-shadow: 0 10px 22px rgba(15, 23, 42, 0.08);
}

.add-left {
  display: flex;
  align-items: center;
  gap: 10px;
}

.add-icon {
  width: 26px;
  height: 26px;
  border-radius: 8px;
  background: rgba(155, 189, 201, 0.2);
  color: #6f97a6;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-text {
  font-size: 13px;
  color: #0f172a;
}

.card {
  background: linear-gradient(180deg, #ffffff 0%, #f9fbff 100%);
  border: 1px solid rgba(148, 163, 184, 0.2);
  border-radius: 16px;
  box-shadow: 0 10px 22px rgba(15, 23, 42, 0.08);
  margin-top: 12px;
}

.camper-item {
  padding: 14px;
  display: flex;
  align-items: center;
  gap: 12px;
}

.camper-item.active {
  border-color: rgba(47, 125, 117, 0.4);
  background: rgba(47, 125, 117, 0.06);
}

.radio {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  border: 2px solid #cbd5e1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.camper-item.active .radio {
  border-color: #2f7d75;
}

.radio-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #2f7d75;
}

.camper-main {
  flex: 1;
}

.camper-name {
  font-size: 14px;
  font-weight: 600;
  color: #0f172a;
  display: block;
}

.camper-sub {
  margin-top: 4px;
  font-size: 11px;
  color: #7b8a99;
  display: block;
  line-height: 1.5;
}

.empty {
  margin-top: 16px;
  text-align: center;
  color: #94a3b8;
  font-size: 12px;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 12px 16px calc(12px + env(safe-area-inset-bottom));
  border-top: 1px solid #e6ebf1;
  background: rgba(255, 255, 255, 0.94);
  backdrop-filter: blur(12px);
  display: flex;
  justify-content: center;
}

.confirm-btn {
  --td-button-primary-bg-color: #9bbdc9;
  --td-button-primary-border-color: #9bbdc9;
  --td-button-primary-hover-bg-color: #8fb2be;
  --td-button-primary-hover-border-color: #8fb2be;
  height: 40px;
  padding: 0 40px;
  font-size: 13px;
  font-weight: 600;
  border-radius: 999px;
  width: 100%;
}

.home-indicator {
  position: fixed;
  bottom: 8px;
  left: 50%;
  transform: translateX(-50%);
  width: 120px;
  height: 4px;
  border-radius: 999px;
  background: #0f172a;
  opacity: 0.12;
  pointer-events: none;
  z-index: 6;
}
