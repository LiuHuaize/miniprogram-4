<view class="page">
  <view class="status-spacer"></view>

  <view class="nav-bar">
    <view class="nav-left" bindtap="onBack">
      <view class="nav-icon-wrap">
        <t-icon name="chevron-left" size="32rpx" />
      </view>
      <text class="nav-text">返回</text>
    </view>
    <text class="nav-title">常用信息</text>
    <view class="nav-right"></view>
  </view>

  <scroll-view class="scroll-area" scroll-y show-scrollbar="{{false}}">
    <view class="add-row" bindtap="onAdd">
      <view class="add-left">
        <view class="add-icon">
          <t-icon name="add" size="26rpx" />
        </view>
        <text class="add-text">新增报名人信息</text>
      </view>
      <t-icon name="chevron-right" size="26rpx" />
    </view>

    <view
      class="card camper-item {{selectedId === item.id ? 'active' : ''}}"
      wx:for="{{campers}}"
      wx:key="id"
      data-id="{{item.id}}"
      bindtap="onSelect"
    >
      <view class="radio">
        <view class="radio-dot" wx:if="{{selectedId === item.id}}"></view>
      </view>
      <view class="camper-main">
        <text class="camper-name">{{item.name}}</text>
        <text class="camper-sub">身份证号：{{item.idNoMask || '未填写'}}　身高：{{item.height || '未填写'}}　体重：{{item.weight || '未填写'}}</text>
      </view>
    </view>

    <view class="empty" wx:if="{{!campers.length}}">
      <text>暂无常用信息，请先新增</text>
    </view>
  </scroll-view>

  <view class="bottom-bar">
    <t-button class="confirm-btn" theme="primary" shape="round" size="small" bindtap="onConfirm">确认</t-button>
  </view>

  <view class="home-indicator"></view>
</view>
