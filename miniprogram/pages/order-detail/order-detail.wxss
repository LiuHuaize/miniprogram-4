page {
  height: 100vh;
  background:
    radial-gradient(circle at 15% 0%, rgba(47, 125, 117, 0.1), transparent 42%),
    radial-gradient(circle at 95% 10%, rgba(56, 189, 248, 0.12), transparent 48%),
    linear-gradient(180deg, #ffffff 0%, #f5f8fb 100%);
  color: #1f2a37;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.status-spacer {
  height: 44px;
}

.nav-bar {
  padding: 6px 16px 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 14px;
  color: #64748b;
}

.nav-left,
.nav-right {
  display: flex;
  align-items: center;
  min-width: 60px;
}

.nav-left {
  color: #475569;
}

.nav-icon-wrap {
  width: 28px;
  height: 28px;
  border-radius: 999px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f3f6f9;
  border: 1px solid rgba(148, 163, 184, 0.2);
  margin-right: 6px;
}

.nav-text {
  font-weight: 500;
}

.nav-title {
  font-size: 16px;
  font-weight: 600;
  color: #0f172a;
}

.nav-right {
  justify-content: flex-end;
}

.nav-action {
  width: 30px;
  height: 30px;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f3f6f9;
  border: 1px solid rgba(148, 163, 184, 0.2);
  color: #64748b;
}

.scroll-area {
  flex: 1;
  height: 0;
  padding: 0 16px;
  padding-bottom: calc(140px + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.card {
  background: linear-gradient(180deg, #ffffff 0%, #f9fbff 100%);
  border: 1px solid rgba(148, 163, 184, 0.2);
  border-radius: 18px;
  box-shadow: 0 12px 24px rgba(15, 23, 42, 0.1);
  margin-bottom: 16px;
}

.summary-card {
  display: flex;
  gap: 12px;
  padding: 16px;
  align-items: center;
}

.summary-thumb {
  width: 80px;
  height: 64px;
  border-radius: 12px;
  background: linear-gradient(135deg, #0f172a 0%, #334155 55%, #64748b 100%);
}

.summary-main {
  flex: 1;
}

.summary-title {
  font-size: 14px;
  font-weight: 600;
  color: #0f172a;
  line-height: 1.4;
}

.summary-sub {
  margin-top: 4px;
  font-size: 12px;
  color: #64748b;
}

.summary-price {
  font-size: 16px;
  font-weight: 600;
  color: #2f7d75;
}

.info-card {
  padding: 16px;
  display: flex;
  flex-direction: column;
  gap: 12px;
  font-size: 14px;
}

.info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-label {
  color: #94a3b8;
}

.info-value {
  color: #1f2937;
  font-weight: 600;
}

.info-value--success {
  color: #10b981;
}

.section {
  margin-bottom: 16px;
}

.section-title {
  font-size: 14px;
  font-weight: 600;
  color: #0f172a;
  position: relative;
  padding-left: 10px;
  margin-bottom: 10px;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 2px;
  width: 4px;
  height: 16px;
  border-radius: 999px;
  background: #2f7d75;
}

.form-card {
  padding: 0 12px;
}

.field-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 4px;
  font-size: 14px;
  border-bottom: 1px solid #edf0f3;
}

.field-row--last {
  border-bottom: none;
}

.field-label {
  color: #94a3b8;
}

.field-value {
  color: #1f2937;
  font-weight: 600;
}

.note-card {
  padding: 12px 16px;
}

.note-text {
  font-size: 12px;
  color: #94a3b8;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px calc(12px + env(safe-area-inset-bottom));
  border-top: 1px solid rgba(148, 163, 184, 0.2);
  background: rgba(255, 255, 255, 0.94);
  backdrop-filter: blur(12px);
}

.bottom-label {
  font-size: 12px;
  color: #94a3b8;
}

.bottom-price {
  margin-top: 4px;
  font-size: 18px;
  font-weight: 600;
  color: #2f7d75;
}

.paid-btn {
  --td-button-primary-bg-color: #2f7d75;
  --td-button-primary-border-color: #2f7d75;
  --td-button-primary-hover-bg-color: #24665f;
  --td-button-primary-hover-border-color: #24665f;
  height: 38px;
  padding: 0 22px;
  font-size: 14px;
  font-weight: 600;
}

.home-indicator {
  position: fixed;
  bottom: 8px;
  left: 50%;
  transform: translateX(-50%);
  width: 120px;
  height: 4px;
  border-radius: 999px;
  background: #0f172a;
  opacity: 0.12;
  pointer-events: none;
  z-index: 6;
}
