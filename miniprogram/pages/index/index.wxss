page {
  height: 100vh;
  background: linear-gradient(180deg, #ffffff 0%, #f5f9fc 100%);
  color: #1f2a37;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.status-spacer {
  height: 44px;
}

.page-title {
  padding: 4px 0 12px;
  text-align: center;
  font-size: 16px;
  font-weight: 600;
  color: #0f172a;
}

.search-section {
  padding: 0 16px 12px;
}

.search {
  --td-search-height: 72rpx;
  --td-search-padding: 12rpx 24rpx;
  --td-search-bg-color: #f1f5f9;
  --td-search-placeholder-color: #8fa1b4;
  --td-search-icon-color: #8fa1b4;
  --td-search-text-color: #0f172a;
  --td-search-square-radius: 32rpx;
  border-radius: 999px;
  border: 1px solid rgba(148, 163, 184, 0.2);
  box-shadow: 0 8px 16px rgba(15, 23, 42, 0.06);
}

.scroll-area {
  flex: 1;
  height: 0;
  padding: 0 16px;
  padding-bottom: calc(140px + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.card-list {
  padding-bottom: 16px;
}

.card {
  background: linear-gradient(180deg, #ffffff 0%, #f9fbff 100%);
  border: 1px solid rgba(148, 163, 184, 0.2);
  border-radius: 18px;
  overflow: hidden;
  box-shadow: 0 10px 24px rgba(15, 23, 42, 0.08);
  margin-bottom: 16px;
}

.card:last-child {
  margin-bottom: 0;
}

.card-hero {
  position: relative;
  height: 160px;
}

.card-hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(15, 23, 42, 0.08), rgba(15, 23, 42, 0.5));
}

.card-hero-top {
  position: absolute;
  top: 16px;
  left: 16px;
  display: flex;
  align-items: center;
  z-index: 1;
}

.card-hero-sub {
  font-size: 12px;
  opacity: 0.8;
  margin-left: 8px;
}

.card-hero-bottom {
  position: absolute;
  bottom: 16px;
  left: 16px;
  display: flex;
  flex-direction: column;
  z-index: 1;
}

.card-hero-title {
  font-size: 18px;
  font-weight: 600;
  line-height: 1.3;
}

.card-hero-desc {
  font-size: 12px;
  opacity: 0.8;
  margin-top: 4px;
  line-height: 1.5;
}

.card-hero--light .card-hero-title,
.card-hero--light .card-hero-desc,
.card-hero--light .card-hero-sub {
  color: #ffffff;
}

.card-hero--dark .card-hero-title,
.card-hero--dark .card-hero-desc,
.card-hero--dark .card-hero-sub {
  color: #334155;
}

.card-hero--dark .card-hero-desc,
.card-hero--dark .card-hero-sub {
  opacity: 1;
  color: #475569;
}

.card-body {
  padding: 16px;
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 14px;
  font-weight: 600;
  color: #1f2a37;
  margin-bottom: 6px;
  line-height: 1.4;
}

.card-meta {
  font-size: 12px;
  color: #64748b;
  line-height: 1.5;
}

.card-tag {
  font-size: 11px;
}

.bottom-bar {
  --td-tab-bar-active-color: #2f7d75;
  --td-tab-bar-color: #94a3b8;
  --td-tab-bar-border-color: #e2e8f0;
  --td-tab-bar-height: 96rpx;
  --td-font-body-extraSmall: 22rpx;
  background-color: rgba(255, 255, 255, 0.94);
  backdrop-filter: blur(10px);
}

.tab-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

.home-indicator {
  position: fixed;
  bottom: 8px;
  left: 50%;
  transform: translateX(-50%);
  width: 120px;
  height: 4px;
  border-radius: 999px;
  background: #0f172a;
  opacity: 0.12;
  pointer-events: none;
  z-index: 6;
}
