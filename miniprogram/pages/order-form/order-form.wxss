page {
  height: 100vh;
  background: #f5f7f9;
  color: #1f2a37;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.status-spacer {
  height: 44px;
}

.nav-bar {
  padding: 6px 16px 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 14px;
  color: #64748b;
}

.nav-left,
.nav-right {
  display: flex;
  align-items: center;
  min-width: 60px;
}

.nav-left {
  color: #475569;
}

.nav-icon-wrap {
  width: 28px;
  height: 28px;
  border-radius: 999px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f2f5;
  margin-right: 6px;
}

.nav-text {
  font-weight: 500;
}

.nav-title {
  font-size: 16px;
  font-weight: 600;
  color: #0f172a;
}

.nav-right {
  justify-content: flex-end;
}

.nav-action {
  width: 30px;
  height: 30px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f2f5;
  color: #64748b;
}

.scroll-area {
  flex: 1;
  height: 0;
  padding: 0 16px;
  padding-bottom: calc(140px + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.card {
  background: #ffffff;
  border: 1px solid #e6ebf1;
  border-radius: 16px;
  box-shadow: 0 8px 16px rgba(15, 23, 42, 0.06);
  margin-bottom: 12px;
}

.summary-card {
  display: flex;
  gap: 12px;
  padding: 14px;
  align-items: center;
}

.summary-thumb {
  width: 84px;
  height: 64px;
  border-radius: 12px;
  background: #dbe4ea;
}

.summary-main {
  flex: 1;
  min-width: 0;
}

.summary-title {
  font-size: 14px;
  font-weight: 600;
  color: #0f172a;
  display: block;
  line-height: 1.4;
}

.summary-sub {
  margin-top: 4px;
  font-size: 11px;
  color: #94a3b8;
  display: block;
}

.summary-price {
  font-size: 15px;
  font-weight: 700;
  color: #3a8c88;
  white-space: nowrap;
}

.period-card {
  padding: 12px 14px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.period-left {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.period-label {
  font-size: 11px;
  color: #a0aec0;
}

.period-value {
  font-size: 12px;
  color: #0f172a;
  display: block;
}

.section {
  margin-top: 10px;
}

.section-title {
  font-size: 13px;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 8px;
}

.count-card {
  padding: 12px 14px;
}

.count-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.count-label {
  font-size: 13px;
  color: #0f172a;
}

.count-stepper {
  display: flex;
  align-items: center;
  gap: 10px;
}

.step-btn {
  width: 28px;
  height: 28px;
  border-radius: 8px;
  background: #f0f4f7;
  color: #2f7d75;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  font-weight: 600;
}

.step-btn.disabled {
  color: #cbd5e1;
  background: #f5f7fa;
}

.step-value {
  font-size: 14px;
  font-weight: 600;
  color: #0f172a;
  width: 18px;
  text-align: center;
}

.camper-card {
  padding: 12px 14px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.camper-left {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.camper-title {
  font-size: 12px;
  color: #94a3b8;
  display: block;
}

.camper-sub {
  font-size: 13px;
  color: #0f172a;
  display: block;
}

.form-card {
  padding: 0 12px;
}

.field-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 4px;
  font-size: 13px;
  border-bottom: 1px solid #edf0f3;
}

.field-row--last {
  border-bottom: none;
}

.field-label {
  color: #1f2937;
  font-weight: 500;
}

.field-value {
  min-width: 160px;
  display: flex;
  justify-content: flex-end;
}

.picker-value {
  display: flex;
  align-items: center;
  gap: 4px;
  color: #94a3b8;
}

.picker-text {
  color: #94a3b8;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px calc(12px + env(safe-area-inset-bottom));
  border-top: 1px solid #e6ebf1;
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(10px);
}

.bottom-left {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.bottom-label {
  font-size: 11px;
  color: #a0aec0;
  display: block;
}

.bottom-price {
  margin-top: 2px;
  font-size: 18px;
  font-weight: 700;
  color: #0f172a;
  display: block;
}

.submit-btn {
  --td-button-primary-bg-color: #9bbdc9;
  --td-button-primary-border-color: #9bbdc9;
  --td-button-primary-hover-bg-color: #8fb2be;
  --td-button-primary-hover-border-color: #8fb2be;
  height: 40px;
  padding: 0 26px;
  font-size: 13px;
  font-weight: 600;
  border-radius: 999px;
}

.home-indicator {
  position: fixed;
  bottom: 8px;
  left: 50%;
  transform: translateX(-50%);
  width: 120px;
  height: 4px;
  border-radius: 999px;
  background: #0f172a;
  opacity: 0.15;
  pointer-events: none;
  z-index: 6;
}

.period-mask {
  position: fixed;
  inset: 0;
  background: rgba(15, 23, 42, 0.4);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 20;
}

.period-sheet {
  width: 100%;
  background: #ffffff;
  border-top-left-radius: 18px;
  border-top-right-radius: 18px;
  padding: 18px 16px calc(24px + env(safe-area-inset-bottom));
  box-shadow: 0 -12px 24px rgba(15, 23, 42, 0.18);
}

.period-head {
  padding-bottom: 12px;
  border-bottom: 1px solid #edf1f5;
}

.period-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12px;
}

.period-title {
  font-size: 14px;
  font-weight: 600;
  color: #0f172a;
  line-height: 1.4;
  display: block;
}

.period-price {
  font-size: 16px;
  font-weight: 700;
  color: #3a8c88;
  white-space: nowrap;
  display: block;
}

.period-sub {
  margin-top: 6px;
  font-size: 11px;
  color: #94a3b8;
  display: block;
}

.period-quota {
  margin-top: 4px;
  font-size: 12px;
  color: #7b8a99;
  display: block;
}

.period-section-title {
  margin-top: 14px;
  font-size: 13px;
  font-weight: 600;
  color: #0f172a;
}

.period-list {
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.period-item {
  padding: 12px 14px;
  border-radius: 12px;
  background: #f7f9fb;
  border: 1px solid #e6ebf1;
  font-size: 12px;
  color: #64748b;
}

.period-item.active {
  background: rgba(47, 125, 117, 0.12);
  border-color: rgba(47, 125, 117, 0.4);
  color: #2f7d75;
  font-weight: 600;
}

.period-confirm {
  --td-button-primary-bg-color: #9bbdc9;
  --td-button-primary-border-color: #9bbdc9;
  --td-button-primary-hover-bg-color: #8fb2be;
  --td-button-primary-hover-border-color: #8fb2be;
  margin-top: 16px;
  width: 100%;
  height: 40px;
  font-size: 13px;
  font-weight: 600;
}
