page {
  height: 100vh;
  background: #f5f7f9;
  color: #1f2a37;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.status-spacer {
  height: 44px;
}

.nav-bar {
  padding: 6px 16px 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 14px;
  color: #64748b;
}

.nav-left,
.nav-right {
  display: flex;
  align-items: center;
  min-width: 60px;
}

.nav-left {
  color: #475569;
}

.nav-icon-wrap {
  width: 28px;
  height: 28px;
  border-radius: 999px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f2f5;
  margin-right: 6px;
}

.nav-text {
  font-weight: 500;
}

.nav-title {
  font-size: 16px;
  font-weight: 600;
  color: #0f172a;
}

.scroll-area {
  flex: 1;
  height: 0;
  padding: 0 16px;
  padding-bottom: calc(120px + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.card {
  background: #ffffff;
  border: 1px solid #e6ebf1;
  border-radius: 16px;
  box-shadow: 0 8px 16px rgba(15, 23, 42, 0.06);
  margin-top: 12px;
}

.form-card {
  padding: 0 12px;
}

.field-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 4px;
  font-size: 13px;
  border-bottom: 1px solid #edf0f3;
}

.field-row--last {
  border-bottom: none;
}

.field-label {
  color: #1f2937;
  font-weight: 500;
}

.field-value {
  min-width: 160px;
  display: flex;
  justify-content: flex-end;
}

.field-input {
  min-width: 160px;
  text-align: right;
  --td-input-vertical-padding: 0;
  --td-input-bg-color: transparent;
  --td-input-placeholder-text-color: #94a3b8;
  --td-input-default-text-color: #1f2937;
}

.picker-value {
  display: flex;
  align-items: center;
  gap: 4px;
  color: #94a3b8;
  width: 100%;
  justify-content: flex-end;
}

.picker-text {
  color: #94a3b8;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 12px 16px calc(12px + env(safe-area-inset-bottom));
  border-top: 1px solid #e6ebf1;
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(10px);
  display: flex;
  justify-content: center;
}

.save-btn {
  --td-button-primary-bg-color: #9bbdc9;
  --td-button-primary-border-color: #9bbdc9;
  --td-button-primary-hover-bg-color: #8fb2be;
  --td-button-primary-hover-border-color: #8fb2be;
  height: 40px;
  padding: 0 40px;
  font-size: 13px;
  font-weight: 600;
  border-radius: 999px;
  width: 100%;
}

.home-indicator {
  position: fixed;
  bottom: 8px;
  left: 50%;
  transform: translateX(-50%);
  width: 120px;
  height: 4px;
  border-radius: 999px;
  background: #0f172a;
  opacity: 0.15;
  pointer-events: none;
  z-index: 6;
}
