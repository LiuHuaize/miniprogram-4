<view class="page">
  <view class="status-spacer"></view>

  <view class="nav-bar">
    <view class="nav-left" bindtap="onBack">
      <view class="nav-icon-wrap">
        <t-icon name="chevron-left" size="32rpx" />
      </view>
      <text class="nav-text">返回</text>
    </view>
    <text class="nav-title">营员信息</text>
    <view class="nav-right"></view>
  </view>

  <scroll-view class="scroll-area" scroll-y show-scrollbar="{{false}}">
    <view class="card form-card">
      <view class="field-row">
        <view class="field-label">孩子姓名</view>
        <view class="field-value">
          <t-input
            class="field-input"
            placeholder="请输入"
            borderless
            align="left"
            value="{{camper.name}}"
            bindchange="onNameChange"
          />
        </view>
      </view>
      <view class="field-row">
        <view class="field-label">孩子身份证号</view>
        <view class="field-value">
          <t-input
            class="field-input"
            placeholder="{{camper.idNoMask ? '已保存，重新输入以修改' : '请输入'}}"
            borderless
            align="left"
            type="idcard"
            value="{{camper.idNo}}"
            bindchange="onIdChange"
          />
        </view>
      </view>
      <view class="field-row">
        <view class="field-label">身高</view>
        <view class="field-value">
          <t-input
            class="field-input"
            placeholder="请输入"
            borderless
            align="left"
            type="number"
            value="{{camper.height}}"
            bindchange="onHeightChange"
          />
        </view>
      </view>
      <view class="field-row">
        <view class="field-label">体重</view>
        <view class="field-value">
          <t-input
            class="field-input"
            placeholder="请输入"
            borderless
            align="left"
            type="number"
            value="{{camper.weight}}"
            bindchange="onWeightChange"
          />
        </view>
      </view>
      <view class="field-row">
        <view class="field-label">忌口、过敏原</view>
        <view class="field-value">
          <t-input
            class="field-input"
            placeholder="请输入"
            borderless
            align="left"
            value="{{camper.allergies}}"
            bindchange="onAllergiesChange"
          />
        </view>
      </view>
      <view class="field-row field-row--stacked field-row--last">
        <view class="field-label">一句话介绍孩子的性格</view>
        <view class="field-value">
          <t-input
            class="field-input"
            placeholder="请输入"
            borderless
            align="left"
            value="{{camper.personality}}"
            bindchange="onPersonalityChange"
          />
        </view>
      </view>
    </view>
  </scroll-view>

  <view class="bottom-bar">
    <t-button class="save-btn" theme="primary" shape="round" size="small" bindtap="onSave">确认</t-button>
  </view>

  <view class="home-indicator"></view>
</view>
