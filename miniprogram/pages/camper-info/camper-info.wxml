<view class="page">
  <view class="status-spacer"></view>

  <view class="nav-bar">
    <view class="nav-left" bindtap="onBack">
      <view class="nav-icon-wrap">
        <t-icon name="chevron-left" size="32rpx" />
      </view>
      <text class="nav-text">返回</text>
    </view>
    <text class="nav-title">营员信息</text>
    <view class="nav-right"></view>
  </view>

  <scroll-view class="scroll-area" scroll-y show-scrollbar="{{false}}">
    <view class="card form-card">
      <view class="field-row">
        <view class="field-label">姓名</view>
        <view class="field-value">
          <t-input
            class="field-input"
            placeholder="请输入"
            borderless
            align="right"
            value="{{camper.name}}"
            bindchange="onNameChange"
          />
        </view>
      </view>
      <view class="field-row" bindtap="onOpenGender">
        <view class="field-label">性别</view>
        <view class="field-value">
          <view class="picker-value" bindtap="onOpenGender">
            <text class="picker-text">{{camper.gender || '请选择'}}</text>
            <t-icon name="chevron-right" size="28rpx" />
          </view>
        </view>
      </view>
      <picker mode="date" value="{{camper.birthday}}" bindchange="onBirthChange">
        <view class="field-row">
          <view class="field-label">生日</view>
          <view class="field-value">
            <view class="picker-value">
              <text class="picker-text">{{camper.birthday || '请选择'}}</text>
              <t-icon name="chevron-right" size="28rpx" />
            </view>
          </view>
        </view>
      </picker>
      <view class="field-row field-row--last">
        <view class="field-label">身份证号</view>
        <view class="field-value">
          <t-input
            class="field-input"
            placeholder="请输入"
            borderless
            align="right"
            value="{{camper.idNo}}"
            bindchange="onIdChange"
          />
        </view>
      </view>
    </view>
  </scroll-view>

  <view class="bottom-bar">
    <t-button class="save-btn" theme="primary" shape="round" size="small" bindtap="onSave">确认</t-button>
  </view>

  <t-picker
    visible="{{genderVisible}}"
    title="选择性别"
    confirm-btn="确定"
    cancel-btn="取消"
    bind:confirm="onConfirmGender"
    bind:cancel="onCloseGender"
    bind:close="onCloseGender"
  >
    <t-picker-item options="{{genderOptions}}" />
  </t-picker>

  <view class="home-indicator"></view>
</view>
