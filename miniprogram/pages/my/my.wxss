page {
  height: 100vh;
  background: linear-gradient(180deg, #f8fafc 0%, #eef3f8 100%);
  color: #0f172a;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.status-spacer {
  height: 44px;
}

.nav-bar {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  font-size: 16px;
  font-weight: 600;
  color: #0f172a;
}

.profile-card {
  margin: 8px 16px 16px;
  padding: 16px;
  border-radius: 18px;
  background: linear-gradient(180deg, #ffffff 0%, #f9fbff 100%);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
  border: 1px solid rgba(148, 163, 184, 0.2);
  box-shadow: 0 12px 28px rgba(15, 23, 42, 0.1);
}

.profile-left {
  display: flex;
  flex-direction: column;
  gap: 6px;
  flex: 1;
  min-width: 0;
}

.profile-greeting {
  font-size: 16px;
  font-weight: 600;
  color: #0f172a;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.profile-sub {
  font-size: 12px;
  color: #94a3b8;
}

.profile-avatar {
  width: 56px;
  height: 56px;
  border-radius: 50%;
  background: #f3f6f9;
  border: 1px solid rgba(148, 163, 184, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  flex-shrink: 0;
}

.profile-avatar-image {
  width: 100%;
  height: 100%;
  display: block;
}

.menu-section {
  padding: 0 16px 120px;
  display: flex;
  flex-direction: column;
  gap: 12px;
  box-sizing: border-box;
}

.menu-card {
  background: #ffffff;
  border-radius: 16px;
  border: 1px solid rgba(148, 163, 184, 0.2);
  overflow: hidden;
}

.menu-item {
  height: 52px;
  display: flex;
  align-items: center;
  padding: 0 16px;
  gap: 12px;
}

.menu-item + .menu-item {
  border-top: 1px solid rgba(148, 163, 184, 0.12);
}

.menu-item--center {
  justify-content: center;
  gap: 8px;
  color: #6b7280;
}

.menu-icon {
  width: 32px;
  height: 32px;
  border-radius: 10px;
  background: #f2f6f9;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #64748b;
}

.menu-icon--plain {
  width: 24px;
  height: 24px;
  border-radius: 12px;
  background: transparent;
}

.menu-text {
  font-size: 14px;
  color: #111827;
}

.bottom-bar {
  --td-tab-bar-active-color: #2f7d75;
  --td-tab-bar-color: #94a3b8;
  --td-tab-bar-border-color: #e2e8f0;
  --td-tab-bar-height: 96rpx;
  --td-font-body-extraSmall: 22rpx;
  background-color: rgba(255, 255, 255, 0.94);
  backdrop-filter: blur(10px);
}

.tab-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

.home-indicator {
  position: fixed;
  bottom: 8px;
  left: 50%;
  transform: translateX(-50%);
  width: 120px;
  height: 4px;
  border-radius: 999px;
  background: #0f172a;
  opacity: 0.12;
  pointer-events: none;
  z-index: 6;
}
