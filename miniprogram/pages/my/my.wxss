page {
  height: 100vh;
  background: linear-gradient(180deg, #ffffff 0%, #f9fbfd 100%);
  color: #1f2a37;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.status-spacer {
  height: 44px;
}

.page-title {
  padding: 4px 0 12px;
  text-align: center;
  font-size: 16px;
  font-weight: 600;
  color: #0f172a;
}

.scroll-area {
  flex: 1;
  height: 0;
  padding: 0 16px;
  padding-bottom: calc(140px + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.order-list {
  padding-bottom: 16px;
}

.order-card {
  background: #ffffff;
  border: 1px solid #e5e7eb;
  border-radius: 18px;
  padding: 16px;
  box-shadow: 0 6px 20px rgba(15, 23, 42, 0.06);
  margin-bottom: 16px;
}

.order-card:last-child {
  margin-bottom: 0;
}

.order-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order-row + .order-row {
  margin-top: 12px;
}

.order-title {
  font-size: 14px;
  font-weight: 600;
  color: #1f2a37;
  flex: 1;
  margin-right: 12px;
}

.order-tag {
  font-size: 11px;
}

.order-row--meta {
  font-size: 12px;
  color: #6b7280;
}

.order-row--foot {
  font-size: 12px;
  color: #94a3b8;
}

.order-action {
  color: #94a3b8;
}

.bottom-bar {
  --td-tab-bar-active-color: #2f7d75;
  --td-tab-bar-color: #94a3b8;
  --td-tab-bar-border-color: #e2e8f0;
  --td-tab-bar-height: 96rpx;
  --td-font-body-extraSmall: 22rpx;
  background-color: rgba(255, 255, 255, 0.92);
  backdrop-filter: blur(8px);
}

.tab-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

.home-indicator {
  position: fixed;
  bottom: 8px;
  left: 50%;
  transform: translateX(-50%);
  width: 120px;
  height: 4px;
  border-radius: 999px;
  background: #0f172a;
  opacity: 0.15;
  pointer-events: none;
  z-index: 6;
}
