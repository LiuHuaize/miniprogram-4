page {
  height: 100vh;
  background: linear-gradient(180deg, #f9fbff 0%, #f2f6fb 55%, #eef2f6 100%);
  color: #1f2a37;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.status-spacer {
  height: 44px;
}

.nav-bar {
  padding: 6px 16px 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 14px;
  color: #64748b;
}

.nav-left,
.nav-right {
  display: flex;
  align-items: center;
  min-width: 60px;
}

.nav-left {
  color: #475569;
}

.nav-icon-wrap {
  width: 28px;
  height: 28px;
  border-radius: 999px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f3f6f9;
  border: 1px solid rgba(148, 163, 184, 0.2);
  margin-right: 6px;
}

.nav-text {
  font-weight: 500;
}

.nav-title {
  font-size: 16px;
  font-weight: 600;
  color: #0f172a;
}

.nav-right {
  justify-content: flex-end;
}

.nav-action {
  width: 30px;
  height: 30px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f3f6f9;
  border: 1px solid rgba(148, 163, 184, 0.2);
  color: #64748b;
}

.nav-action + .nav-action {
  margin-left: 8px;
}

.scroll-area {
  flex: 1;
  min-height: 0;
  padding: 0 16px;
  padding-bottom: calc(92px + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.hero-card {
  margin-top: 4px;
}

.hero-image {
  position: relative;
  height: 210px;
  border-radius: 22px;
  overflow: hidden;
  background: #dbe4ea;
  border: 1px solid rgba(255, 255, 255, 0.45);
  box-shadow: 0 10px 22px rgba(15, 23, 42, 0.12);
}

.hero-photo {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.hero-mask {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(15, 23, 42, 0.02), rgba(15, 23, 42, 0.42));
  z-index: 1;
}

.hero-badge {
  position: absolute;
  top: 14px;
  left: 14px;
  font-size: 10px;
  letter-spacing: 0.06em;
  color: rgba(255, 255, 255, 0.9);
  padding: 4px 10px;
  border-radius: 999px;
  background: rgba(15, 23, 42, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(6px);
  z-index: 2;
}

.hero-title {
  position: absolute;
  left: 16px;
  bottom: 50px;
  font-size: 19px;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 6px 14px rgba(15, 23, 42, 0.28);
  z-index: 2;
}

.hero-sub {
  position: absolute;
  left: 16px;
  bottom: 26px;
  font-size: 11px;
  color: rgba(255, 255, 255, 0.82);
  line-height: 1.4;
  z-index: 2;
}

.info-card {
  background: rgba(255, 255, 255, 0.96);
  border-radius: 20px;
  padding: 18px 16px;
  box-shadow: 0 14px 26px rgba(15, 23, 42, 0.12);
  border: 1px solid rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  margin: -24px 12px 12px;
  position: relative;
  z-index: 3;
}

.info-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 8px 12px;
  flex-wrap: wrap;
}

.info-left {
  flex: 1;
  min-width: 0;
}

.info-title {
  font-size: 16px;
  font-weight: 600;
  color: #0f172a;
  line-height: 1.4;
  display: block;
}

.info-sub {
  margin-top: 4px;
  font-size: 11px;
  color: #94a3b8;
  display: block;
}

.info-right {
  text-align: right;
  flex-shrink: 0;
  max-width: 46%;
}

.info-price {
  font-size: 18px;
  font-weight: 700;
  color: #2563eb;
  line-height: 1.2;
  display: block;
}

.info-tip {
  margin-top: 4px;
  font-size: 10px;
  color: #9aa6b2;
  line-height: 1.4;
  display: block;
}

.info-meta {
  display: flex;
  justify-content: space-between;
  gap: 6px;
  margin-top: 8px;
}

.period-row {
  margin-top: 12px;
  padding: 10px 12px;
  border-radius: 12px;
  background: #f3f6f9;
  border: 1px solid rgba(148, 163, 184, 0.12);
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #7b8a99;
  font-size: 12px;
}

.period-left {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.period-label {
  font-size: 11px;
  color: #a0aec0;
}

.period-value {
  font-size: 12px;
  color: #0f172a;
  display: block;
}

.meta-item {
  flex: 1;
  background: #f4f7fa;
  border: 1px solid rgba(148, 163, 184, 0.14);
  border-radius: 999px;
  padding: 6px 10px;
  font-size: 11px;
  color: #7a8a9a;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4px;
}

.meta-item t-icon {
  color: #94a3b8;
}

.tabs {
  margin: 8px 0 6px;
  background: transparent;
  border-radius: 14px;
  border: none;
  padding: 0;
  box-shadow: none;
}

.tab-list {
  display: flex;
  align-items: center;
  gap: 2px;
  padding: 4px;
  background: #ffffff;
  border-radius: 999px;
  border: 1px solid rgba(148, 163, 184, 0.18);
  box-shadow: 0 8px 16px rgba(15, 23, 42, 0.08);
}

.tab-item {
  padding: 6px 12px;
  font-size: 11px;
  color: #94a3b8;
  white-space: nowrap;
  border-radius: 999px;
}

.tab-item.active {
  color: #ffffff;
  background: #2563eb;
  box-shadow: none;
  font-weight: 600;
}

.section-block {
  margin-top: 16px;
}

.section-head {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  margin-bottom: 10px;
}

.section-left {
  display: flex;
  align-items: baseline;
  gap: 8px;
}

.section-title {
  font-size: 15px;
  font-weight: 700;
  color: #0f172a;
}

.section-en {
  font-size: 10px;
  letter-spacing: 0.2em;
  color: #b0bac5;
}

.section-brand {
  font-size: 10px;
  letter-spacing: 0.2em;
  color: #c2cbd4;
}

.section-card {
  background: #ffffff;
  border-radius: 18px;
  overflow: hidden;
  border: none;
  box-shadow: 0 12px 26px rgba(15, 23, 42, 0.1);
}

.section-figure {
  position: relative;
  height: 170px;
  padding: 14px;
  color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.section-figure::after {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(15, 23, 42, 0.04), rgba(15, 23, 42, 0.48));
}

.figure-photo {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.figure-content {
  position: relative;
  z-index: 1;
}

.theme-figure {
  background: linear-gradient(135deg, #0f766e 0%, #38bdf8 100%);
}

.content-figure {
  background: linear-gradient(135deg, #1d4ed8 0%, #60a5fa 100%);
}

.schedule-figure {
  background: linear-gradient(135deg, #0f766e 0%, #16a34a 100%);
}

.itinerary-figure {
  background: linear-gradient(135deg, #f97316 0%, #facc15 100%);
}

.stay-figure {
  background: linear-gradient(135deg, #0ea5e9 0%, #6366f1 100%);
}

.service-figure {
  background: linear-gradient(135deg, #1f2937 0%, #475569 100%);
}

.figure-chip {
  align-self: flex-start;
  padding: 4px 10px;
  border-radius: 999px;
  background: rgba(15, 23, 42, 0.35);
  border: 1px solid rgba(255, 255, 255, 0.2);
  font-size: 11px;
  margin-bottom: 6px;
}

.figure-title {
  font-size: 16px;
  font-weight: 700;
  display: block;
  letter-spacing: 0.02em;
}

.figure-sub {
  margin-top: 2px;
  font-size: 11px;
  color: rgba(255, 255, 255, 0.85);
  display: block;
}

.section-body {
  padding: 14px 16px 18px;
}

.section-subtitle {
  font-size: 13px;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 6px;
  display: block;
}

.section-desc {
  margin-top: 6px;
  font-size: 12px;
  color: #7b8a99;
  line-height: 1.6;
  display: block;
}

.chip-row {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 6px;
}

.chip {
  padding: 4px 10px;
  border-radius: 999px;
  font-size: 11px;
  color: #2563eb;
  background: rgba(37, 99, 235, 0.14);
}

.list-item {
  display: flex;
  align-items: flex-start;
  gap: 8px;
  font-size: 12px;
  color: #5f6f7f;
  line-height: 1.6;
}

.list-item + .list-item {
  margin-top: 8px;
}

.dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: #2563eb;
  margin-top: 6px;
  flex-shrink: 0;
}

.schedule-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 10px;
}

.schedule-item {
  padding: 12px 14px;
  border-radius: 14px;
  background: #f5f8fb;
  border: 1px solid rgba(148, 163, 184, 0.12);
}

.schedule-day {
  font-size: 11px;
  color: #2563eb;
  font-weight: 600;
  display: block;
}

.schedule-title {
  margin-top: 4px;
  font-size: 13px;
  font-weight: 600;
  color: #0f172a;
  display: block;
}

.schedule-time {
  margin-top: 4px;
  font-size: 11px;
  color: #9aa6b2;
  display: block;
}

.timeline-item {
  display: flex;
  gap: 10px;
  margin-top: 10px;
}

.timeline-item:first-child {
  margin-top: 0;
}

.timeline-dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: #2563eb;
  margin-top: 6px;
  flex-shrink: 0;
}

.timeline-content {
  flex: 1;
}

.timeline-title {
  font-size: 13px;
  font-weight: 600;
  color: #0f172a;
  display: block;
}

.timeline-desc {
  margin-top: 4px;
  font-size: 11px;
  color: #7b8a99;
  line-height: 1.6;
  display: block;
}

.stay-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 10px;
}

.stay-card {
  padding: 12px 14px;
  border-radius: 14px;
  background: #f5f8fb;
  border: 1px solid rgba(148, 163, 184, 0.12);
}

.stay-title {
  font-size: 12px;
  font-weight: 600;
  color: #0f172a;
  display: block;
}

.stay-desc {
  margin-top: 6px;
  font-size: 11px;
  color: #7b8a99;
  line-height: 1.6;
  display: block;
}

.service-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

.service-item {
  padding: 12px;
  border-radius: 14px;
  background: #f5f8fb;
  border: 1px solid rgba(148, 163, 184, 0.12);
  text-align: center;
}

.service-icon {
  width: 30px;
  height: 30px;
  border-radius: 10px;
  margin: 0 auto 8px;
  background: #93b7c1;
  color: #ffffff;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.service-title {
  font-size: 12px;
  font-weight: 600;
  color: #0f172a;
  display: block;
}

.service-desc {
  margin-top: 4px;
  font-size: 10px;
  color: #9aa6b2;
  line-height: 1.5;
  display: block;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 10px 12px calc(10px + env(safe-area-inset-bottom));
  padding-left: 20px;
  border-top: none;
  background: rgba(255, 255, 255, 0.96);
  box-shadow: 0 -12px 26px rgba(15, 23, 42, 0.08);
  backdrop-filter: blur(14px);
  pointer-events: auto;
}

.bottom-bar-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
  padding: 0;
  border-radius: 0;
  background: transparent;
  border: none;
  box-shadow: none;
  backdrop-filter: none;
}

.bottom-info {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.bottom-label {
  font-size: 10px;
  letter-spacing: 0.12em;
  color: #a0aec0;
}

.bottom-price {
  margin-top: 0;
  font-size: 18px;
  font-weight: 700;
  color: #0f172a;
}

.apply-btn {
  --td-button-primary-bg-color: #2563eb;
  --td-button-primary-border-color: #2563eb;
  --td-button-primary-hover-bg-color: #1d4ed8;
  --td-button-primary-hover-border-color: #1d4ed8;
  height: 42px;
  padding: 0 28px;
  font-size: 13px;
  font-weight: 600;
  border-radius: 999px;
  box-shadow: 0 8px 16px rgba(37, 99, 235, 0.26);
}

.home-indicator {
  position: fixed;
  bottom: 8px;
  left: 50%;
  transform: translateX(-50%);
  width: 120px;
  height: 4px;
  border-radius: 999px;
  background: #0f172a;
  opacity: 0.12;
  pointer-events: none;
  z-index: 6;
}

.period-mask {
  position: fixed;
  inset: 0;
  background: rgba(15, 23, 42, 0.4);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 20;
}

.period-sheet {
  width: 100%;
  background: #ffffff;
  border-top-left-radius: 18px;
  border-top-right-radius: 18px;
  padding: 18px 16px calc(24px + env(safe-area-inset-bottom));
  box-shadow: 0 -14px 28px rgba(15, 23, 42, 0.18);
}

.period-head {
  padding-bottom: 12px;
  border-bottom: 1px solid #edf1f5;
}

.period-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12px;
}

.period-title {
  font-size: 14px;
  font-weight: 600;
  color: #0f172a;
  line-height: 1.4;
  display: block;
}

.period-price {
  font-size: 16px;
  font-weight: 700;
  color: #2563eb;
  white-space: nowrap;
  display: block;
}

.period-sub {
  margin-top: 6px;
  font-size: 11px;
  color: #94a3b8;
  display: block;
}

.period-quota {
  margin-top: 4px;
  font-size: 12px;
  color: #7b8a99;
  display: block;
}

.period-section-title {
  margin-top: 14px;
  font-size: 13px;
  font-weight: 600;
  color: #0f172a;
}

.period-list {
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.period-item {
  padding: 12px 14px;
  border-radius: 12px;
  background: #f8fafc;
  border: 1px solid rgba(148, 163, 184, 0.2);
  font-size: 12px;
  color: #64748b;
}

.period-item.active {
  background: rgba(37, 99, 235, 0.12);
  border-color: rgba(37, 99, 235, 0.4);
  color: #2563eb;
  font-weight: 600;
}

.period-confirm {
  --td-button-primary-bg-color: #93c5fd;
  --td-button-primary-border-color: #93c5fd;
  --td-button-primary-hover-bg-color: #7fb6f6;
  --td-button-primary-hover-border-color: #7fb6f6;
  margin-top: 16px;
  width: 100%;
  height: 40px;
  font-size: 13px;
  font-weight: 600;
}

.poster-image {
  width: 100%;
  border-radius: 14px;
  display: block;
  margin-top: 12px;
  box-shadow: 0 10px 20px rgba(15, 23, 42, 0.08);
}

.poster-caption {
  margin-top: 6px;
  font-size: 10px;
  color: #94a3b8;
  text-align: center;
  display: block;
}

.qa-card {
  margin-top: 12px;
  padding: 12px 14px;
  border-radius: 14px;
  background: #f5f8fb;
  border: 1px solid rgba(148, 163, 184, 0.12);
}

.qa-title {
  font-size: 12px;
  font-weight: 600;
  color: #1e3a8a;
  display: block;
  margin-bottom: 8px;
}

.qa-item + .qa-item {
  margin-top: 10px;
}

.qa-q {
  font-size: 11px;
  font-weight: 600;
  color: #1e40af;
  display: block;
}

.qa-a {
  margin-top: 4px;
  font-size: 11px;
  color: #64748b;
  line-height: 1.6;
  display: block;
}
