page {
  height: 100vh;
  background: #f5f7f9;
  color: #1f2a37;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.status-spacer {
  height: 44px;
}

.nav-bar {
  padding: 6px 16px 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 14px;
  color: #64748b;
}

.nav-left,
.nav-right {
  display: flex;
  align-items: center;
  min-width: 60px;
}

.nav-left {
  color: #475569;
}

.nav-icon-wrap {
  width: 28px;
  height: 28px;
  border-radius: 999px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f2f5;
  margin-right: 6px;
}

.nav-text {
  font-weight: 500;
}

.nav-title {
  font-size: 16px;
  font-weight: 600;
  color: #0f172a;
}

.nav-right {
  justify-content: flex-end;
}

.nav-action {
  width: 30px;
  height: 30px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f2f5;
  color: #64748b;
}

.nav-action + .nav-action {
  margin-left: 8px;
}

.scroll-area {
  flex: 1;
  height: 0;
  padding: 0 16px;
  padding-bottom: calc(140px + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.hero-card {
  margin-top: 4px;
}

.hero-image {
  position: relative;
  height: 200px;
  border-radius: 18px;
  overflow: hidden;
  background: #dbe4ea;
  box-shadow: 0 12px 20px rgba(15, 23, 42, 0.12);
}

.hero-photo {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.hero-mask {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(15, 23, 42, 0.05), rgba(15, 23, 42, 0.45));
  z-index: 1;
}

.hero-badge {
  position: absolute;
  top: 14px;
  left: 14px;
  font-size: 11px;
  color: rgba(255, 255, 255, 0.9);
  padding: 4px 10px;
  border-radius: 999px;
  background: rgba(15, 23, 42, 0.35);
  border: 1px solid rgba(255, 255, 255, 0.2);
  z-index: 2;
}

.hero-title {
  position: absolute;
  left: 16px;
  bottom: 42px;
  font-size: 18px;
  font-weight: 700;
  color: #ffffff;
  z-index: 2;
}

.hero-sub {
  position: absolute;
  left: 16px;
  bottom: 18px;
  font-size: 11px;
  color: rgba(255, 255, 255, 0.82);
  z-index: 2;
}

.info-card {
  background: #ffffff;
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 12px 20px rgba(15, 23, 42, 0.08);
  border: 1px solid #e6ebf1;
  margin: -22px 10px 12px;
  position: relative;
  z-index: 3;
}

.info-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 8px 12px;
  flex-wrap: wrap;
}

.info-left {
  flex: 1;
  min-width: 0;
}

.info-title {
  font-size: 15px;
  font-weight: 600;
  color: #0f172a;
  line-height: 1.4;
  display: block;
}

.info-sub {
  margin-top: 4px;
  font-size: 11px;
  color: #a0aec0;
  display: block;
}

.info-right {
  text-align: right;
  flex-shrink: 0;
  max-width: 46%;
}

.info-price {
  font-size: 18px;
  font-weight: 700;
  color: #3a8c88;
  line-height: 1.2;
  display: block;
}

.info-tip {
  margin-top: 4px;
  font-size: 10px;
  color: #a0aec0;
  line-height: 1.4;
  display: block;
}

.info-meta {
  display: flex;
  justify-content: space-between;
  gap: 8px;
  margin-top: 12px;
}

.meta-item {
  flex: 1;
  background: #f5f7fa;
  border-radius: 999px;
  padding: 6px 10px;
  font-size: 11px;
  color: #7a8a9a;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4px;
}

.meta-item t-icon {
  color: #94a3b8;
}

.tabs {
  margin: 6px 0 8px;
  background: #ffffff;
  border-radius: 14px;
  border: 1px solid #e6ebf1;
  padding: 6px 10px;
}

.tab-list {
  display: flex;
  align-items: center;
}

.tab-item {
  padding: 6px 10px;
  font-size: 12px;
  color: #a0aec0;
  white-space: nowrap;
  border-bottom: 2px solid transparent;
}

.tab-item.active {
  color: #2f7d75;
  border-bottom-color: #2f7d75;
  font-weight: 600;
}

.section-block {
  margin-top: 18px;
}

.section-head {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  margin-bottom: 10px;
}

.section-left {
  display: flex;
  align-items: baseline;
  gap: 8px;
}

.section-title {
  font-size: 15px;
  font-weight: 700;
  color: #0f172a;
}

.section-en {
  font-size: 10px;
  letter-spacing: 0.2em;
  color: #b0bac5;
}

.section-brand {
  font-size: 10px;
  letter-spacing: 0.2em;
  color: #c2cbd4;
}

.section-card {
  background: #ffffff;
  border-radius: 16px;
  overflow: hidden;
  border: 1px solid #e6ebf1;
  box-shadow: 0 8px 16px rgba(15, 23, 42, 0.06);
}

.section-figure {
  position: relative;
  height: 170px;
  padding: 14px;
  color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.section-figure::after {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(15, 23, 42, 0.08), rgba(15, 23, 42, 0.55));
}

.figure-photo {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.figure-content {
  position: relative;
  z-index: 1;
}

.theme-figure {
  background: linear-gradient(135deg, #0f766e 0%, #38bdf8 100%);
}

.content-figure {
  background: linear-gradient(135deg, #1d4ed8 0%, #60a5fa 100%);
}

.schedule-figure {
  background: linear-gradient(135deg, #0f766e 0%, #16a34a 100%);
}

.itinerary-figure {
  background: linear-gradient(135deg, #f97316 0%, #facc15 100%);
}

.stay-figure {
  background: linear-gradient(135deg, #0ea5e9 0%, #6366f1 100%);
}

.service-figure {
  background: linear-gradient(135deg, #1f2937 0%, #475569 100%);
}

.figure-chip {
  align-self: flex-start;
  padding: 4px 10px;
  border-radius: 999px;
  background: rgba(15, 23, 42, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.2);
  font-size: 11px;
  margin-bottom: 6px;
}

.figure-title {
  font-size: 16px;
  font-weight: 700;
  display: block;
}

.figure-sub {
  margin-top: 2px;
  font-size: 11px;
  color: rgba(255, 255, 255, 0.85);
  display: block;
}

.section-body {
  padding: 14px 16px 18px;
}

.section-subtitle {
  font-size: 13px;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 6px;
  display: block;
}

.section-desc {
  margin-top: 6px;
  font-size: 12px;
  color: #7b8a99;
  line-height: 1.6;
  display: block;
}

.chip-row {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 6px;
}

.chip {
  padding: 4px 10px;
  border-radius: 999px;
  font-size: 11px;
  color: #2f7d75;
  background: rgba(47, 125, 117, 0.12);
}

.list-item {
  display: flex;
  align-items: flex-start;
  gap: 8px;
  font-size: 12px;
  color: #5f6f7f;
  line-height: 1.6;
}

.list-item + .list-item {
  margin-top: 8px;
}

.dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: #2f7d75;
  margin-top: 6px;
  flex-shrink: 0;
}

.schedule-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 10px;
}

.schedule-item {
  padding: 12px 14px;
  border-radius: 14px;
  background: #f7f9fb;
  border: 1px solid #e6ebf1;
}

.schedule-day {
  font-size: 11px;
  color: #2f7d75;
  font-weight: 600;
  display: block;
}

.schedule-title {
  margin-top: 4px;
  font-size: 13px;
  font-weight: 600;
  color: #0f172a;
  display: block;
}

.schedule-time {
  margin-top: 4px;
  font-size: 11px;
  color: #9aa6b2;
  display: block;
}

.timeline-item {
  display: flex;
  gap: 10px;
  margin-top: 10px;
}

.timeline-item:first-child {
  margin-top: 0;
}

.timeline-dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: #2f7d75;
  margin-top: 6px;
  flex-shrink: 0;
}

.timeline-content {
  flex: 1;
}

.timeline-title {
  font-size: 13px;
  font-weight: 600;
  color: #0f172a;
  display: block;
}

.timeline-desc {
  margin-top: 4px;
  font-size: 11px;
  color: #7b8a99;
  line-height: 1.6;
  display: block;
}

.stay-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 10px;
}

.stay-card {
  padding: 12px 14px;
  border-radius: 14px;
  background: #f7f9fb;
  border: 1px solid #e6ebf1;
}

.stay-title {
  font-size: 12px;
  font-weight: 600;
  color: #0f172a;
  display: block;
}

.stay-desc {
  margin-top: 6px;
  font-size: 11px;
  color: #7b8a99;
  line-height: 1.6;
  display: block;
}

.service-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

.service-item {
  padding: 12px;
  border-radius: 14px;
  background: #f7f9fb;
  border: 1px solid #e6ebf1;
  text-align: center;
}

.service-icon {
  width: 30px;
  height: 30px;
  border-radius: 10px;
  margin: 0 auto 8px;
  background: #93b7c1;
  color: #ffffff;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.service-title {
  font-size: 12px;
  font-weight: 600;
  color: #0f172a;
  display: block;
}

.service-desc {
  margin-top: 4px;
  font-size: 10px;
  color: #9aa6b2;
  line-height: 1.5;
  display: block;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px calc(12px + env(safe-area-inset-bottom));
  border-top: 1px solid #e6ebf1;
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(10px);
}

.bottom-label {
  font-size: 11px;
  color: #a0aec0;
}

.bottom-price {
  margin-top: 2px;
  font-size: 18px;
  font-weight: 700;
  color: #0f172a;
}

.apply-btn {
  --td-button-primary-bg-color: #9bbdc9;
  --td-button-primary-border-color: #9bbdc9;
  --td-button-primary-hover-bg-color: #8fb2be;
  --td-button-primary-hover-border-color: #8fb2be;
  height: 40px;
  padding: 0 28px;
  font-size: 13px;
  font-weight: 600;
  border-radius: 999px;
}

.home-indicator {
  position: fixed;
  bottom: 8px;
  left: 50%;
  transform: translateX(-50%);
  width: 120px;
  height: 4px;
  border-radius: 999px;
  background: #0f172a;
  opacity: 0.15;
  pointer-events: none;
  z-index: 6;
}
